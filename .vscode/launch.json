{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "gdb",
            "request": "attach",
            "name": "Attach to gdbserver",
            "executable": "${workspaceFolder}/build/${input:target}/bin/app.elf",
            "target": "localhost:6000",
            "remote": true,
            "cwd": "${workspaceFolder}",
            "valuesFormatting": "parseText",
            "gdbpath": "gdb-multiarch",
            "stopAtConnect":true,
            "pathSubstitutions": {
                "/app": "${workspaceFolder}",
                "/opt/nanos-secure-sdk":"${config:nanos-secure-sdk-home",
                "/opt/ledger-secure-sdk":"${config:ledger-secure-sdk-home"
            },
            "autorun": [
                "set architecture arm",
                "handle SIGILL nostop pass noprint",
                "add-symbol-file ${workspaceFolder}/build/${input:model}/bin/app.elf 0x40000000",
                "b *0x40000000",
                "c"
            ]
        }
    ],
    "inputs": [
        {
            "id": "model",
            "type": "command",
            "command": "extension.commandvariable.file.content",
            "args": {
                "fileName": "${workspaceFolder}/.vscode/targets.json",
                "json": "content.model.${command:cpptools.activeConfigName}",
                "default": "nanos",
                "keyRemember":"model"
            }
        }
    ]
}